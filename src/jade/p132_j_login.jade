  body.login-layout.blur-login
    div.main-container.mt20.pt20
      div.main-content
        div.row
          div.col-sm-10.col-sm-offset-1
            div.login-container
              div.center
                h1
                  i.ace-icon.fa.fa-leaf.green
                  span.red 电视钱包
                  span.white#id-test2 后台管理系统
              div.space-6
              div.position-relative
                div.login-box.visible.widget-box.no-border#login-box
                  div.widget-body
                    div.widget-main
                      h4(class="header blue lighter bigger")
                        i(class="ace-icon fa fa-coffee green")
                        | 请输入用户名密码
                      form(action="http://www.weibo.com" class="J_login_form" method="post")
                        fieldset
                          label.block.clearfix
                            span(class="block input-icon input-icon-right")
                              input(type="text" class="form-control J_input_verify J_login_input" placeholder="用户名" data-type="loginid" required data-ajax="javascript:;" name="ID" data-info="用户名")
                              i(class="ace-icon fa fa-user")
                          label.block.clearfix
                            span(class="block input-icon input-icon-right")
                              input(type="password" class="form-control J_input_verify J_login_input" placeholder="密码" data-type="loginpwd" data-ajax="javascript:;" data-info="密码")
                              i.ace-icon.fa.fa-lock
                          div.space
                          div.clearfix
                            label.inline
                              input.ace(type="checkbox")
                              span.lbl 记住密码
                            button(type="submit" class="width-35 pull-right btn btn-sm btn-primary")
                              i(class="ace-icon fa fa-key")
                              span.bigger-110 登陆
                          div.space-4
    script(src='../static/plugins/ace/assets/js/jquery.min.js')
    script(src="../static/public/js/jquery.x.min.js")
    script(src="static/js/base.js")
    script(src="static/js/baseAjax.js")
